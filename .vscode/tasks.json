{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start FastAPI Server",
            "type": "shell",
            "command": ".venv\\Scripts\\activate; uvicorn app.main:app --host 0.0.0.0 --port 8000",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Backend Services",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start FastAPI Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start virtual environment",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-NoExit",
                "-Command",
                "cd server; .venv\\Scripts\\activate"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ]
} 